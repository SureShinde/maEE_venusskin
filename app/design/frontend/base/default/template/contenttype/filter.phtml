<?php
    $collection = $this->getAttributeValues();
?>
<div class="block block-ct-filter">
    <div class="block-title">
        <strong><span><?php echo $this->__($this->getLabel()); ?></span></strong>
    </div>
    <div class="block-content block-ct-filter-content">
        <ul>
            <?php
                foreach($collection as $value):
            ?>
            <li>
                <a href="<?php echo $this->getFilteredUrl(array($this->getAttributeToFilter() => $value->value)); ?>">
                    <?php echo $value->title; ?>
                </a>
            </li>
            <?php endforeach; ?>
            <?php if($this->getViewAll()): ?>
                <li>
                    <a href="<?php echo $this->getFilteredUrl(array($this->getAttributeToFilter() => '')); ?>">
                        <?php echo $this->__('View all'); ?>
                    </a>
                </li>
            <?php endif; ?>
        </ul>
    </div>
</div>

