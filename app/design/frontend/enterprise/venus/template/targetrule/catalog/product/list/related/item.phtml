/** @var $this Enterprise_TargetRule_Block_Catalog_Product_Item */
$_item = $this->getItem();
if ($_item):
    ?>
    <li class="item related-products__product">
        <a href="<?php echo $this->getProductUrl($_item) ?>"
           class="product-image">
            <img src="<?php echo $this->helper('catalog/image')->init($_item, 'small_image')->resize(500) ?>"
                 title="<?php echo $this->escapeHtml($_item->getName()) ?>"
                 alt="<?php echo $this->escapeHtml($_item->getName()) ?>"/>
        </a>
        <div class="product-info">
            <h3 class="product-name">
                <a href="<?php echo $this->getProductUrl($_item) ?>"
                   title="<?php echo $this->stripTags($_item->getName(), null, true) ?>"><?php echo $this->escapeHtml($_item->getName()) ?></a>
            </h3>
            <div class="price-info">
                <?php echo $this->getPriceHtml($_item, true, '-related') ?>
                <i class="icon icon-info-sign vip-banner-button"
                   title="<?php echo $this->__('What is VIP?'); ?>"></i>
            </div>
            <div class="price-options">
                <div class="actions">
                    <?php if ($_item->isSaleable()): ?>
                        <button type="button" title="<?php echo $this->__('Add to Cart') ?>"
                                class="button btn-cart"
                                onclick="setLocation('<?php echo $_item->getAddToCartUrl($this) ?>')">
                            <span><span><?php echo $this->__('Add to Cart') ?></span></span>
                        </button>

                        <button type="button" title="<?php echo $this->__('Learn More') ?>"
                                class="button btn-cart"
                                onclick="setLocation('<?php echo $this->getProductUrl($_item) ?>')">
                            <span><span><?php echo $this->__('Learn More') ?></span></span>
                        </button>
                    <?php elseif (!$_item->getIsSalable()): ?>
                        <div class="button out-of-stock">
                                <span
                                    class="availability out-of-stock"><span><?php echo $this->__('Out of Stock') ?></span></span>
                        </div>
                    <?php endif; ?>
                    <ul class="add-to-links">
                        <?php if ($this->helper('wishlist')->isAllow()) : ?>
                            <li><a href="<?php echo $this->helper('wishlist')->getAddUrl($this) ?>"
                                   class="link-wishlist"><?php echo $this->__('Add to Wishlist') ?></a>
                            </li>
                        <?php endif; ?>
                    </ul>
                </div>
            </div>
        </div>
    </li>
<?php endif; ?>
