<?xml version="1.0"?>
<config>
    <modules>
        <Snowdog_ShippingPriority>
            <version>0.2.0</version>
        </Snowdog_ShippingPriority>
    </modules>
    <global>
        <helpers>
            <shippingpriority>
                <class>Snowdog_ShippingPriority_Helper</class>
            </shippingpriority>
        </helpers>
        <models>
            <matrixrate_shipping>
                <rewrite>
                    <carrier_matrixrate>Snowdog_ShippingPriority_Model_Matrixrate_Carrier_Matrixrate</carrier_matrixrate>
                    <!--<carrier_matrixrate>Snowdog_ShippingPriority_Model_Matrixrate_Mysql4_Carrier_Matrixrate</carrier_matrixrate>-->
                </rewrite>
            </matrixrate_shipping>
            <matrixrate_mysql4>
                <rewrite>
                    <carrier_matrixrate>Snowdog_ShippingPriority_Model_Matrixrate_Mysql4_Carrier_Matrixrate</carrier_matrixrate>
                </rewrite>
            </matrixrate_mysql4>
        </models>
        <blocks>
            <shippingpriority>
                <class>Snowdog_ShippingPriority_Block</class>
            </shippingpriority>
            <theme>
                <rewrite>
                    <adminhtml_sales_order_processing>Snowdog_ShippingPriority_Block_Adminhtml_Sales_Order_Processing</adminhtml_sales_order_processing>
                </rewrite>
            </theme>
        </blocks>
        <resources>
            <shippingpriority_setup>
                <setup>
                    <module>Snowdog_ShippingPriority</module>
                    <class>Mage_Sales_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </shippingpriority_setup>
            <shippingpriority_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </shippingpriority_write>
            <shippingpriority_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </shippingpriority_read>
        </resources>
        <events>
            <checkout_type_onepage_save_order>
                <observers>
                    <checkout_type_onepage_save_order_handler>
                        <type>singleton</type>
                        <class>Snowdog_ShippingPriority_Model_Observer</class>
                        <method>addShippingPriority</method>
                    </checkout_type_onepage_save_order_handler>
                </observers>
            </checkout_type_onepage_save_order>
        </events>
        <fieldsets>
            <sales_convert_quote>
                <shipping_priority>
                    <to_order>*</to_order>
                </shipping_priority>
            </sales_convert_quote>
            <sales_convert_order>
                <shipping_priority>
                    <to_quote>*</to_quote>
                </shipping_priority>
            </sales_convert_order>
        </fieldsets>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <shippingpriority>
                    <file>snowshippingpriority.xml</file>
                </shippingpriority>
            </updates>
        </layout>
    </adminhtml>
    <admin>
        <routers>
            <shippingpriority>
                <use>admin</use>
                <args>
                    <module>Snowdog_ShippingPriority</module>
                    <frontName>admin_shippingpriority</frontName>
                </args>
            </shippingpriority>
        </routers>
    </admin>
</config>