<?xml version="1.0"?>
<config>
	<modules>
		<ParadoxLabs_AuthorizeNetCim>
			<version>1.4.1.20140512</version>
		</ParadoxLabs_AuthorizeNetCim>
	</modules>
	<global>
		<blocks>
			<authnetcim>
				<class>ParadoxLabs_AuthorizeNetCim_Block</class>
			</authnetcim>
			<sales>
				<rewrite>
					<adminhtml_recurring_profile_view>ParadoxLabs_AuthorizeNetCim_Block_Adminhtml_Sales_Recurring_Profile_View</adminhtml_recurring_profile_view>
				</rewrite>
			</sales>
		</blocks>
		<helpers>
			<authnetcim>
				<class>ParadoxLabs_AuthorizeNetCim_Helper</class>
			</authnetcim>
		</helpers>
		<models>
			<authnetcim>
				<class>ParadoxLabs_AuthorizeNetCim_Model</class>
                <resourceModel>authnetcim_mysql4</resourceModel>
			</authnetcim>
            <authnetcim_mysql4>
                <class>ParadoxLabs_AuthorizeNetCim_Model_Mysql4</class>
                <entities>
                    <card>
                        <table>authnetcim_card_exclude</table>
                    </card>
                </entities>
            </authnetcim_mysql4>
			<sales>
				<rewrite>
					<service_quote>ParadoxLabs_AuthorizeNetCim_Model_Quote</service_quote>
				</rewrite>
			</sales>
			<authorizenet>
				<rewrite>
					<directpost_observer>ParadoxLabs_AuthorizeNetCim_Model_Directpost</directpost_observer>
				</rewrite>
			</authorizenet>
			<checkout>
				<rewrite>
					<type_onepage>ParadoxLabs_AuthorizeNetCim_Model_Onepage</type_onepage>
				</rewrite>
			</checkout>
			<sarp>
				<rewrite>
					<payment_method_authnetcim>ParadoxLabs_AuthorizeNetCim_Model_Integration_Sarp_Payment</payment_method_authnetcim>
					<web_service_client_authnetcim>ParadoxLabs_AuthorizeNetCim_Model_Integration_Sarp_Service</web_service_client_authnetcim>
				</rewrite>
			</sarp>
		</models>
		<resources>
			<authnetcim_setup>
				<setup>
					<module>ParadoxLabs_AuthorizeNetCim</module>
					<class>Mage_Eav_Model_Entity_Setup</class>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</authnetcim_setup>
			<authnetcim_write>
				<connection>
					<use>core_write</use>
				</connection>
			</authnetcim_write>
			<authnetcim_read>
				<connection>
					<use>core_read</use>
				</connection>
			</authnetcim_read>
		</resources>
		<events>
			<sales_order_creditmemo_refund>
				<observers>
					<authnetcim_refund>
						<class>authnetcim/observer</class>
						<method>processRefund</method>
					</authnetcim_refund>
				</observers>
			</sales_order_creditmemo_refund>
		</events>
	</global>
	<crontab>
		<jobs>
			<authnetcim_daily_billing>
				<schedule>
					<cron_expr>0 * * * *</cron_expr>
				</schedule>
				<run>
					<model>authnetcim/payment::runDailyBilling</model>
				</run>
			</authnetcim_daily_billing>
			<authnetcim_clean_old>
				<schedule>
					<cron_expr>0 5 * * *</cron_expr>
				</schedule>
				<run>
					<model>authnetcim/payment::cleanOldCards</model>
				</run>
			</authnetcim_clean_old>
		</jobs>
	</crontab>
	<default>
		<payment>
			<authnetcim>
				<active>0</active>
				<title>Credit Card (Authorize.Net CIM)</title>
				<cctypes>AE,VI,MC,DI</cctypes>
				<login backend_model="adminhtml/system_config_backend_encrypted"/>
				<model>authnetcim/payment</model>
				<order_status>pending</order_status>
				<payment_action>authorize</payment_action>
				<test>1</test>
				<debug>1</debug>
				<validation_mode>liveMode</validation_mode>
				<trans_key backend_model="adminhtml/system_config_backend_encrypted"/>
				<allowspecific>0</allowspecific>
				<currency>USD</currency>
				<allow_unsaved>1</allow_unsaved>
				<show_branding>0</show_branding>
			</authnetcim>
		 </payment>
	</default>
	<frontend>
		<routers>
			<authnetcim>
				<use>standard</use>
				<args>
					<module>ParadoxLabs_AuthorizeNetCim</module>
					<frontName>authnetcim</frontName>
				</args>
			</authnetcim>
			<checkout>
				<args>
					<modules>
						<ParadoxLabs_AuthorizeNetCim before="Mage_Checkout">ParadoxLabs_AuthorizeNetCim</ParadoxLabs_AuthorizeNetCim>
					</modules>
				</args>
			</checkout>
		</routers>
		<secure_url>
			<authnetcim>/authnetcim/</authnetcim>
		</secure_url>
		<layout>
			<updates>
				<recurring>
					<file>recurring-profile.xml</file>
				</recurring>
				<authnetcim>
					<file>authnetcim.xml</file>
				</authnetcim>
			</updates>
		</layout>
	</frontend>
	<admin>
		<routers>
			<adminhtml>
				<args>
					<modules>
						<authnetcim before="Mage_Adminhtml">ParadoxLabs_AuthorizeNetCim_Adminhtml</authnetcim>
					</modules>
				</args>
			</adminhtml>
		</routers>
	</admin>
	<adminhtml>
		<layout>
			<updates>
				<recurring>
					<file>recurring-profile.xml</file>
				</recurring>
				<authnetcim>
					<file>authnetcim.xml</file>
				</authnetcim>
			</updates>
		</layout>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
			</resources>
		</acl>
		<events>
			<controller_action_predispatch>
				<observers>
					<authnetcim_notification>
						<class>authnetcim/feed</class>
						<method>observe</method>
					</authnetcim_notification>
				</observers>
			</controller_action_predispatch>
		</events>
	</adminhtml>
</config>