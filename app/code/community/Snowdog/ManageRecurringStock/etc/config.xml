                    <!--<sales_order_creditmemo_save_after_handler>-->
                        <!--<class>Snowdog_ManageRecurringStock_Model_Observer</class>-->
                        <!--<method>refundOrderInventory</method>-->
                    <!--</sales_order_creditmemo_save_after_handler>-->
                <!--</observers>-->
            <!--</sales_order_creditmemo_save_after>-->
        </events>
    </global>
</config> 