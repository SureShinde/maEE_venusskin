<?xml version="1.0"?>
<config>
    <modules>
        <Snowdog_OrderGrid>
            <version>0.1.0</version>
        </Snowdog_OrderGrid>
    </modules>
    <global>
        <helpers>
            <ordergrid>
                <class>Snowdog_OrderGrid_Helper</class>
            </ordergrid>
        </helpers>
        <blocks>
            <ordergrid>
                <class>Snowdog_OrderGrid_Block</class>
            </ordergrid>
            <adminhtml>
                <rewrite>
                    <sales_order_grid>Snowdog_OrderGrid_Block_Adminhtml_Sales_Order_Grid</sales_order_grid>
                </rewrite>
            </adminhtml>
        </blocks>
    </global>
    <admin>
        <routers>
            <snoworderview>
                <use>admin</use>
                <args>
                    <module>Snowdog_OrderGrid</module>
                    <frontName>snoworderview</frontName>
                </args>
            </snoworderview>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <ordergrid>
                    <file>snowordergrid.xml</file>
                </ordergrid>
            </updates>
        </layout>
    </adminhtml>
</config>